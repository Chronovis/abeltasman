.coords-editor.editor.modal
	padding 15px
	top 5px
	bottom 5px
	right 410px
	width 480px

	ul
		list-style none

	& > ul
		height 100%
		overflow-y auto
		overflow-x hidden
		
		h3
			font-size 0.9em
			
			
		li.form
			.heading
				h3, ul.edit-coordinates-options
					inline-block()
					width 50%
				
				ul.edit-coordinates-options
					li
						inline-block()
						width 33.33%
						
						img
							height 10px
					

			ul.coordinates
				inline-block()
				padding 10px
		
				&.current
					width 60%
					
					li	
						*
							vertical-align middle
							
						label, input
							inline-block()
							width 50%
							
						input, textarea
							height 28px
							
						input
							text-align right
					
						textarea
							box-sizing border-box
							width 100%
							
						span
							inline-block()
							width 60px
							text-align right
				
				li			
					height 36px
				
			ul:nth-child(2), ul:last-child
				width 20%
				font-size 0.8em
				
			ul:nth-child(2)
				padding-left 0
			
			ul:last-child
				text-align right
				
